@model Character

@{
    ViewData["Title"] = "Detalles del Personaje";
}

<div class="container my-4">

    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card">
                    <div class="text-left mt-4 ml-3">
                        <button id="backButton" style="margin-left:3%" class="btn btn-primary">
                            <i class="bi bi-arrow-left"></i>
                        </button>
                    </div>

                    <div class="row no-gutters">
                        <div class="col-md-6 text-center">
                            <div class="image-container">
                                <img src="@Model.Image" alt="@Model.Name" class="img-fluid rounded" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <h3>Información Básica</h3>
                                <p><strong>Nombre:</strong> @Model.Name</p>
                                <p><strong>Raza:</strong> @Model.Race</p>
                                <p><strong>Género:</strong> @Model.Gender</p>
                                <p><strong>Ki:</strong> @Model.Ki</p>
                                <p><strong>Max Ki:</strong> @Model.MaxKi</p>
                                <p><strong>Afiliación:</strong> @Model.Affiliation</p>
                                <h3>Descripción</h3>
                                <p>@Model.Description</p>
                            </div>
                        </div>
                    </div>


                    <div class="row no-gutters">
                        <div class="col-md-6 text-center">
                            <h3>Planeta de Origen</h3>
                            <img src="@Model.OriginPlanet.Image" alt="@Model.OriginPlanet.Name" class="img-fluid rounded" style="max-width: 300px;" />
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <p><strong>Nombre:</strong> @Model.OriginPlanet.Name</p>
                                <p><strong>Descripción:</strong> @Model.OriginPlanet.Description</p>
                                <p><strong>¿Destruido?:</strong> @(Model.OriginPlanet.IsDestroyed ? "Sí" : "No")</p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h3 class="text-center">Transformaciones</h3>
                        @if (Model.Transformations != null && Model.Transformations.Any())
                        {
                            <div class="row">
                                @foreach (var transformation in Model.Transformations)
                                {
                                    <div class="col-md-3 mb-4" style="padding:2%">
                                        <div class="card h-100 d-flex flex-column">
                                            <div class="card-img-container" style="height: 500px; overflow: hidden;">
                                                <img src="@transformation.Image" alt="@transformation.Name" class="card-img-top img-fluid rounded" style="width: 100%; height: 100%; object-fit: contain;" />
                                            </div>

                                            <div class="card-body d-flex flex-column" style="flex: 0 1 auto;">
                                                <h5 class="card-title">@transformation.Name</h5>
                                                <p class="card-text"><strong>Ki:</strong> @transformation.Ki</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-center">El personaje no tiene transformaciones.</p>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    body {
        background-color: #8E79CE;
    }

    .image-container {
        width: 100%;
        height: 400px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

        .image-container img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain; /* Asegura que la imagen completa se muestre */
        }

    .transformation-image {
        width: 100%;
        height: 200px; /* Altura fija para las imágenes de transformación */
        object-fit: contain; /* Asegura que la imagen completa se muestre */
    }
</style>

<script>
    document.getElementById('backButton').addEventListener('click', function () {
        window.history.back();
    });
</script>
